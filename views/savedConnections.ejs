<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Saved Connections</title>
    <link rel="stylesheet" type="text/css" href="resources/css/stylesheet.css">
  </head>
  <body>
    <%- include('partials/header.ejs', {userDetails: userDetails}); %>    
    <%- include('partials/navigation.ejs', {userDetails: userDetails}); %>    
    <main>
      <div class="main-content">
        <div class="main-header">
          <%=userDetails['firstName']%>'s Connections
        </div>
      <table>
        <tr class="tab-header">
          <th>Connection</th>
          <th>Category</th>
          <th>Going</th>
          <th>Edit</th>
        </tr>
        <%for (var i=0; i < connectionDetails.length; i++){%>
          <tr class="tab-content">
            <td><%=connectionDetails[i].connection['connectionName']%></td>
            <td><%=connectionDetails[i].connection['topic']%></td>
            <td><%=connectionDetails[i].rsvp%></td>
            <td>
              <form class="form" action="/savedConnections?connectionId=<%=connectionDetails[i].connection['connectionID']%>" method="POST">
                <button type="submit" class="button1">Update</button>
                <input type ="hidden" name="action" value="updateProfile">
                <input type ="hidden" name="viewConnections">
               </form>
              <form class="form" action="/savedConnections?connectionId=<%=connectionDetails[i].connection['connectionID']%>" method="POST">
                <button type="submit" class="button1">Delete</button>
                <input type ="hidden" name="action" value="delete">
                <input type ="hidden" name="viewConnections">                
               </form>                    
            </td>
          </tr>
        <%}%>          
      </table>
      </div>
    </main>

    <% include partials/footer.ejs%>
  </body>
</html>
